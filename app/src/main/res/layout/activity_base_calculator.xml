<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:gravity="center"
    android:padding="16dp">

    <Spinner
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/switchUI"
        android:background="#000000"
        />

    <Spinner
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:id="@+id/switchbase"
        android:background="#000000"
        />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:hint="Enter the Value"
        android:textColor="#000000"
        android:textAlignment="center"
        android:textSize="24dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/decimal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#000000"
            android:text="Dec: " />

        <TextView
            android:id="@+id/decimalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#000000"
            android:text="0" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/binary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#000000"
            android:text="Bin: " />

        <TextView
            android:id="@+id/binarytext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#000000"
            android:text="0" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/octal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#000000"
            android:text="Oct: " />

        <TextView
            android:id="@+id/octaltext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#000000"
            android:text="0" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/hex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#000000"
            android:text="Hex: " />

        <TextView
            android:id="@+id/hextext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#000000"
            android:text="0" />

    </LinearLayout>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/num1"
                android:layout_width="65dp"
                android:layout_height="50dp"
                android:backgroundTint="#000000"
                android:textSize="15sp"
                android:textColor="#FFFFFF"
                android:text="1" />

            <Button
                android:id="@+id/num2"
                android:layout_width="65dp"
                android:layout_height="50dp"
                android:backgroundTint="#000000"
                android:textSize="15sp"
                android:textColor="#FFFFFF"
                android:text="2" />

            <Button
                android:id="@+id/num3"
                android:layout_width="65dp"
                android:layout_height="50dp"
                android:backgroundTint="#000000"
                android:textSize="15sp"
                android:textColor="#FFFFFF"
                android:text="3" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/num4"
                android:layout_width="65dp"
                android:layout_height="50dp"
                android:backgroundTint="#000000"
                android:textSize="15sp"
                android:textColor="#FFFFFF"
                android:text="4" />

            <Button
                android:id="@+id/num5"
                android:layout_width="65dp"
                android:layout_height="50dp"
                android:backgroundTint="#000000"
                android:textSize="15sp"
                android:textColor="#FFFFFF"
                android:text="5" />

            <Button
                android:id="@+id/num6"
                android:layout_width="65dp"
                android:layout_height="50dp"
                android:backgroundTint="#000000"
                android:textSize="15sp"
                android:textColor="#FFFFFF"
                android:text="6" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/num7"
                android:layout_width="65dp"
                android:layout_height="50dp"
                android:backgroundTint="#000000"
                android:textSize="15sp"
                android:textColor="#FFFFFF"
                android:text="7" />

            <Button
                android:id="@+id/num8"
                android:layout_width="65dp"
                android:layout_height="50dp"
                android:backgroundTint="#000000"
                android:text="8"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />

            <Button
                android:id="@+id/num9"
                android:layout_width="65dp"
                android:layout_height="50dp"
                android:backgroundTint="#000000"
                android:textSize="15sp"
                android:textColor="#FFFFFF"
                android:text="9" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/zero"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:layout_span="2"
                android:backgroundTint="#000000"
                android:textSize="15sp"
                android:textColor="#FFFFFF"
                android:text="0" />

            <Button
                android:id="@+id/clear_text"
                android:layout_width="65dp"
                android:layout_height="50dp"
                android:backgroundTint="#000000"
                android:textSize="15sp"
                android:textColor="#FFFFFF"
                android:text="âŒ«" />

        </TableRow>

        <!-- Hexadecimal buttons A-F -->
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center">

            <Button
                android:id="@+id/btnA"
                android:layout_width="65dp"
                android:layout_height="50dp"
                android:backgroundTint="#4CAF50"
                android:textSize="15sp"
                android:textColor="#FFFFFF"
                android:text="A" />

            <Button
                android:id="@+id/btnB"
                android:layout_width="65dp"
                android:layout_height="50dp"
                android:backgroundTint="#4CAF50"
                android:textSize="15sp"
                android:textColor="#FFFFFF"
                android:text="B" />

            <Button
                android:id="@+id/btnC"
                android:layout_width="65dp"
                android:layout_height="50dp"
                android:backgroundTint="#4CAF50"
                android:textSize="15sp"
                android:textColor="#FFFFFF"
                android:text="C" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/btnD"
                android:layout_width="65dp"
                android:layout_height="50dp"
                android:backgroundTint="#4CAF50"
                android:textSize="15sp"
                android:textColor="#FFFFFF"
                android:text="D" />

            <Button
                android:id="@+id/btnE"
                android:layout_width="65dp"
                android:layout_height="50dp"
                android:backgroundTint="#4CAF50"
                android:textSize="15sp"
                android:textColor="#FFFFFF"
                android:text="E" />

            <Button
                android:id="@+id/btnF"
                android:layout_width="65dp"
                android:layout_height="50dp"
                android:backgroundTint="#4CAF50"
                android:textSize="15sp"
                android:textColor="#FFFFFF"
                android:text="F" />

        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="#000000"
        android:textSize="15sp"
        android:textColor="#FFFFFF"
        android:text="Submit" />

</LinearLayout>